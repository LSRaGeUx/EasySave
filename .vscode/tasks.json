{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ProSoft/EasySave/EasySave.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ProSoft/EasySave/EasySave.csproj",
                "--configuration", "Release",
                "--output", "${workspaceFolder}/bin/Release/net7.0/publish"
            ]
        }
    ]
}